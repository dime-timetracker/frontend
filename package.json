{
  "name": "dime-frontend",
  "version": "0.1.0",
  "devDependencies": {
    "browserify-middleware": "^5.0.2",
    "expect.js": "^0.3.1",
    "grunt": "^0.4.5",
    "grunt-contrib-sass": "^0.9.2",
    "grunt-contrib-watch": "^0.6.1",
    "intl": "^1.0.0",
    "mithril-query": "^0.7.5",
    "mocha": "^2.2.5",
    "sass": "^0.5.0",
    "stylus": "^0.51.1",
    "watchify": "^3.2.2"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "lodash": "^3.9.3",
    "mithril": "^0.2.0",
    "moment": "^2.10.3",
    "mousetrap": "^1.5.3",
    "mousetrap-pause": "^1.0.0",
    "simple-uuid": "0.0.1",
    "translate.js": "0.0.2"
  },
  "scripts": {
    "build:js": "node_modules/browserify-middleware/node_modules/browserify/bin/cmd.js src/js/app.js > public/js/app.js",
    "build:css": "node_modules/.bin/stylus src/styles/dime.styl -m -o public/css/",
    "build": "npm run build:js && npm run build:css",
    "test": "mocha src/**/*.test.js",
    "watch:js": "node_modules/.bin/watchify src/js/app.js -o public/js/app.js --debug --verbose",
    "watch:css": "node_modules/.bin/stylus --watch src/styles/dime.styl -o public/css/",
    "watch:build": "npm run watch:js && npm run watch:css'",
    "watch:test": "node_modules/.bin/mocha -w src/**/*.test.js"
  }
}
