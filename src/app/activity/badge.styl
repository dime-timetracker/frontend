.badge-list
  margin 0

  & > li
    background-color #26A69A
    background-clip padding-box
    border-radius 2px
    box-sizing border-box
    color #FFF
    font-size 1rem
    min-width 3rem
    margin-right 6px
    text-align center
    line-height inherit

    &.incomplete
      background-color #FBC02D

    &.empty
      background-color #F44336

    & > a
      color inherit
      padding 0px 3px

  &.badge-list-small

    & > li
      font-size .7rem

      &.input
        background inherit
        border #26A69A 2px solid
        box-sizing content-box
        color #26A69A
        height 20px
        margin-right 0
        padding-left 3px

        a
          font-size 0.8em

        input, input:focus
          background transparent
          border none
          height 20px
          outline-color transparent
          vertical-align top

.badge
  /* background-color: color('green', 'base');*/
  background-clip padding-box
  border-radius 2px
  box-sizing border-box
  color #999
  font-size 0.8rem
  min-width 3rem
  text-align center
  line-height inherit
  margin 0 10px
  padding 2px 5px

  & > a
    color #999
    text-decoration none

  &.incomplete
    background-color #FBC02D

  &.empty
    background-color #F44336

  .embedded-form
    color #212121
    position absolute
    text-align right
    z-index 10

    .close
      background black
      border none
      border-radius 100%
      color white
      display block
      height 2rem
      margin-left 20rem
      margin-top 1rem
      position absolute
      width 2rem

    .card
      margin-top 2rem
      position absolute
      text-align left
      width 20rem
