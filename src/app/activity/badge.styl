.badge-list
  margin: 0

.badge-list > li
  background-color: #26A69A
  background-clip: padding-box
  border-radius: 2px
  box-sizing: border-box
  color: #FFF
  font-size: 1rem
  min-width: 3rem
  margin-right: 6px
  text-align: center
  line-height: inherit

.badge-list > li.incomplete
  background-color: #FBC02D

.badge-list > li.empty
  background-color: #F44336

.badge-list > li > a
  color: inherit
  padding: 0px 3px

.badge-list.badge-list-small > li
  font-size: .7rem

.badge-list.badge-list-small > li.input
  background: inherit
  border: #26A69A 2px solid
  box-sizing: content-box
  color: #26A69A
  height: 20px
  margin-right: 0
  padding-left: 3px

.badge-list.badge-list-small > li.input a
  font-size: 0.8em

.badge-list.badge-list-small > li.input input,
.badge-list.badge-list-small > li.input input:focus
  background: transparent
  border: none
  height: 20px
  outline-color: transparent
  vertical-align: top

.badge
  /* background-color: color('green', 'base');*/
  background-clip: padding-box
  border-radius: 2px
  box-sizing: border-box
  color: #999
  font-size: 0.8rem
  min-width: 3rem
  text-align: center
  line-height: inherit
  margin: 0 10px
  padding: 2px 5px

.badge.incomplete
  background-color: #FBC02D

.badge.empty
  background-color: #F44336
