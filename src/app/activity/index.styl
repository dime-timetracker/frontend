.activities
  @import "badge"
  @import "../shell/index"

  .tile
    &:hover
      text-shadow: #388e3c 0px 1px;
    &.running
      border-left 5px solid #ff9800
      .tile-inner
        padding-left 11px
    .row
      .timeslices
        @import "./timeslice/index"
      table
        width: 100%

        th
          padding-right: 1em
          text-align: right
    .tile-action ~ .tile-inner
      overflow: visible

  .activity-icon
    background: url("../img/activity-gray.png") no-repeat center right
    padding-right: 28px

  .filter-icon
    background: url("../img/filter-gray.png") no-repeat center left
    padding-left: 28px

  .statistics
    & > div
      height 30px
    .statistic
      font-size 80%
      font-style italic
      .target
        border #4CAF50
        height 6px
        margin-top 10px
        overflow visible
        .current
          background #4CAF50
          display inline-block
          height 4px
          vertical-align top
      .name
        margin: 0 5px
