.activities
  @import "badge"
  @import "../shell/index"

  .tile
    &.running
      border-left 5px solid #ff9800
      .tile-inner
        padding-left 11px
    .row
      .timeslices
        @import "./timeslice/index"
      table
        width: 100%

        th
          padding-right: 1em
          text-align: right
    .tile-action ~ .tile-inner
      overflow: visible

  .activity-icon
    background: url("../img/activity-gray.png") no-repeat center right
    padding-right: 28px

  .filter-icon
    background: url("../img/filter-gray.png") no-repeat center left
    padding-left: 28px
