.report
  @import "../shell/index"

  table
    td.customer, td.project, td.service
      min-width: 10rem

    td.startedAt, td.stoppedAt
      white-space: nowrap

    td.alias
      font-style: italic

    td.duration, td.price
      text-align: right

    td.total
      font-weight: bold

    tr.total th
      text-align: right

  .columns-selection.row
    margin-left: 0
    margin-right: 0

    label
      margin-right: 16px

form.invoice
  label
    color #4CAF50
    display inline-block
    text-align right
    width 30rem

    &[for=invoice-intro],
    &[for=invoice-outro]
      width 60rem

      textarea
        height 10rem
        width 48rem
        vertical-align top

    input, textarea
      color black
      margin-left 0.5rem
      width 18rem

  button
    margin-left 1rem
    vertical-align bottom
