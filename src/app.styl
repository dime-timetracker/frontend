// our css is based on http://daemonite.github.io/material/
@import "daemonite"
// we want vendor prefixes to be added automatically via http://tj.github.io/nib/
@import "nib"

@import "app/activity/index"
@import "app/customer/index"
@import "app/project/index"
@import "app/report/index"

.header
  .nav
    li
      ul
        background: #4CAF50
        position: absolute
        width: 100%

      &:hover
        ul.hide
          display: inherit

      &.active, &:hover
        background: #3C9F40


.collection
  .list-item
    position: relative

    .title
      font-size: 1.2rem

    .description
      color: #9E9E9E
      font-size: .8rem

      &:before
        content: '-'
        padding: 0 .8em

    p
      margin: 0px

    .secondary-content
      position: absolute
      right: 16px

.form-inline
  background: #F5F5F5
  border-bottom: dashed 1px black
  color: #26A69A
  padding: 1.3em 0

  .form-group
    margin: 0 1em
    text-align: left

    label
      display: block
      font-size: 0.9em
      line-height: 1em
      margin-top: 1em

  .push-down
    margin-top: 1.3em

.nav
  .tag-badges
    a
      display: inline
      padding: 2px 4px
      position: inherit

.tile-action-show
  z-index: 2

.hide
  display: none

.fbtn-container
  bottom: 34px

  .fbtn-miniform
    border-radius: 24px
    bottom: 34px
    box-shadow: 0 3px 10px rgba(0,0,0,0.5)
    height: 49px
    padding: 12px 56px 12px 12px
    position: fixed
    right: 16px

    input
      color: black
      margin-left: 10px

.tile
  .active
    margin-top: 0 !important
    margin-bottom: 24px !important

.customers,
.projects,
.services
  & > .enabled > .row,
  & > .disabled > .row
    align-items flex-start

    & > div
      display inline-block
      float none

  .disabled
    .card
      background #ddd
      font-size 0.6rem

      p
        margin 12px 0

      .card-heading
        font-size 0.8rem

      .btn
        font-size 0.8rem

.activities,
.customers,
.projects,
.services
  .card
    .card-main
      width: 100%

      .edit
        margin-left: -4px
        margin-right: -4px

        .form-row
          border: 1px solid #9e9e9e
          padding: 0 0.2rem
          margin-bottom: -3px

          .affix
            display: inline-block
            font-size: 16px
            vertical-align: baseline

          .form-element
            display: inline-block
            vertical-align: baseline

            label
              background: white
              border: 1px solid #9e9e9e
              border-bottom: none
              font-size: 0.8rem
              line-height: 1rem
              margin: -1rem 0 0 0
              padding: 0 0.3rem
              position: absolute

            input
              border: none
              height: 24px
              padding: 0

            select
              border: none
              height: 24px
              padding-bottom: 0px
              padding-top: 0px

              option
                height: 24px

        &.property.rate
          input
            text-align: right
            width: 2em

      .card-heading
        overflow: hidden

        div
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap

        .edit
          overflow: visible
          input
            height: 28px

.report
  table
    font-size: 80%
